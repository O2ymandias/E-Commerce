@model EditUserVM
@{
	ViewData["Title"] = "Edit";
}


<h1 class="text-center">
	Edit
	<span class="fw-bold text-warning">
		@Model.UserName
	</span>
</h1>

<form asp-action="Edit" method="post">
	<div class="text-danger" asp-validation-summary="ModelOnly"></div>
	<div class="form-group">
		<label class="form-label" asp-for="UserId"></label>
		<input readonly class="form-control" asp-for="UserId" />
	</div>

	<br />

	<div class="form-group">
		<label class="form-label" asp-for="UserName"></label>
		<input class="form-control" asp-for="UserName" />
		<span class="text-danger" asp-validation-for="UserName"></span>
	</div>

	<br />

	<div class="form-group">
		<label class="form-label" asp-for="Email"></label>
		<input class="form-control" asp-for="Email" />
		<span class="text-danger" asp-validation-for="Email"></span>
	</div>

	<br />

	<div class="form-group">
		<label class="form-label" asp-for="DisplayName"></label>
		<input class="form-control" asp-for="DisplayName" />
		<span class="text-danger" asp-validation-for="DisplayName"></span>
	</div>

	<br />

	<div class="form-group">
		<label class="form-label" asp-for="PhoneNumber"></label>
		<input class="form-control" asp-for="PhoneNumber" />
	</div>

	<br />

	<div class="form-group">
		@for (int i = 0; i < Model.Roles.Count; i++)
		{
			<div class="form-check">
				<input class="form-check-input" id="@Model.Roles[i].DisplayValue" type="checkbox" asp-for="Roles[i].IsSelected" />
				<input type="hidden" asp-for="Roles[i].DisplayValue" />
				<label class="form-check-label" for="@Model.Roles[i].DisplayValue">@Model.Roles[i].DisplayValue</label>
			</div>
		}
	</div>

	<br />

	<div>
		<input class="btn btn-warning" type="submit" value="Save" />|
		<a class="btn btn-light" asp-action="Index">Back to List</a>
	</div>
</form>




