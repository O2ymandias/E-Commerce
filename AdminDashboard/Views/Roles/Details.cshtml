@model DetailsRoleVM
@{
	ViewData["Title"] = "Details";
}

<h1 class="text-center">
	Details Of <span class="text-info fw-bold">
	@Model.Name
	</span>
</h1>
<br />
<div class="form-group">
	<label class="form-label" asp-for="Id"></label>
	<input readonly class="form-control" asp-for="Id" />
</div>
<br />
<div class="form-group">
	<label class="form-label" asp-for="Name"></label>
	<input readonly class="form-control" asp-for="Name" />
</div>

@if(Model.Permissions.Count > 0)
{
	<h3 class="text-center">Permissions</h3>
	<table class="table table-striped table-bordered w-75 mx-auto my-4">
		<thead class="text-black bg-info text-center fw-bold">
			<tr>
				<td>Module</td>
				<td>Permission</td>
			</tr>
		</thead>

		<tbody class="text-center">
			@foreach (var permission in Model.Permissions)
			{
				var currentPermission = permission.Split('.');
				<tr>
					<td>@currentPermission[1]</td>
					<td>@currentPermission[2]</td>
				</tr>
			}
		</tbody>
	</table>
}

<div class="mt-3">
	<a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>|
	<a class="btn btn-light" asp-action="Index">Back To List</a>
</div>


